<% var pageTitle= 'Pregunta: ' + quiz.pregunta; %>
<% include ../partials/pageTitle %>

<div class="col-sm-6">
  <div class="row">
    <div class="content">


<form class="form-horizontal" action="/quizes/<%= quiz.id %>/answer" method="get" role="form">
  <div class="form-group">
      <label for="for_respuesta" class="col-sm-2 control-label">Respuesta: </label>
    <div class="col-sm-8 ">
      <input type="text" name="respuesta" class="form-control" id="for_respuesta" placeholder="Responda aquÃ­">
    </div>
    <div class="col-sm-2 ">
      <button type="submit" class="btn btn-default pull-right">Enviar</button>
    </div>
  </div>
  <div class="form-group">
  </div>
</form>
</div>
</div>

<div class="row">
  <div class="content">
  <a href="/quizes/<%= quiz.id %>/comments/new" class="btn btn-primary pull-right">
    Nuevo comentario
  </a>
</div>
</div>


  <div class="row">
    <div class="content">
    <h3>Comentarios:</h3>





    <table class="table">
      <%for (index in quiz.Comments) { %>
          <% if(quiz.Comments[index].publicado || session.user) { %>
      <tr>
      <td><%=quiz.Comments[index].texto%></td>

      <% if(session.user && !quiz.Comments[index].publicado) {%>
        <td class="col-md-1">
          <a href="/quizes/<%=quiz.id %>/comments/<%=quiz.Comments[index].id %>/publish" class="btn btn-primary btn-sm pull-right">
            Publicar
          </a>
        </td>
      <%}%>
      </tr>
      <% } %>
      <% } %>
    </table>




</div>
</div>

</div>
